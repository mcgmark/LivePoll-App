<h1>Register</h1>
{{#if messages}}
<p class="alert alert-danger">{{messages}}</p>
{{else}}
<p class="alert alert-secondary">Please create an account.</p>
{{/if}}

<form method="post">
  <fieldset class="form-group">
    <label for="username" class="col-2 control-label">Username: *</label>
    <input
      name="username"
      id="username"
      required
      type="email"
      placeholder="email@email.com"
    />
  </fieldset>
  <fieldset class="form-group">
    <label for="password" class="col-2 control-label">Password: *</label>
    <input
      name="password"
      id="password"
      type="password"
      required
      pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
    />
  <img src="/images/show.png" id="imgShowHide" alt="Show PW" onClick="showHidePassword()"/>
  </fieldset> 
  <fieldset class="form-group">
    <label for="confirm" class="col-2 control-label">Confirm: *</label>
    <input
      name="confirm"
      id="confirm"
      type="password"
      onkeyup="return comparePasswords();"
      required
      pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
    />
    <span id="pwMsg"></span>
  </fieldset>
  <fieldset class="form-group">
    <button class="btn btn-secondary offset-3" onclick="return comparePasswords();">Register</button>
    <a href="/auth/google"><img src="/images/google_signin.png" alt="Sign in with google" /></a>
    <hr />
    Already have an account?
    <a href="/auth/login" title="Login">Login</a>
  </fieldset>
</form>